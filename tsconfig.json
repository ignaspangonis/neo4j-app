{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/data/*": ["data/*"],
      "@/constants/*": ["constants/*"],
      "@/types/*": ["types/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    },
  },
  "include": [
    "./constants/**/*.ts",
    "./data/**/*.ts",
    "./types/**/*.ts",
    "./utils/**/*.ts",
  ],
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
  ]
}
